#псевдокод

#init
начало
флоат tsum = 0.75;
вещ eps, diff, tsum, sum, slag = 0;
вывод "введите точность";
ввод eps;

#main body
если eps <= 0:
  tsum = 0.75; #точность
  n = 0; #кол-во эл-тов
  sum = 0; #сумма
  diff = |tsum - sum|; #Разность точного значения и суммы

  пока diff > eps:
    n = n + 1;
    slag = 1/(n-1)(n+1);
    sum = tsum + sum;
    diff = |tsum - sum|

#Конечный вывод результата
вывод "Кол-во просуммированных эл-тов:", n;
вывод "Сумма:", sum;
вывод "Разность суммы и точного значения:", diff;
вывод "Точность:", tsum;
